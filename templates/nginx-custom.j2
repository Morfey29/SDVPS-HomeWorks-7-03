server {
    listen {{ nginx_port }};
    server_name {{ server_name }};

    root /var/www/html/custom;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }

    access_log /var/log/nginx/custom.access.log;
    error_log /var/log/nginx/custom.error.log;
}